%% -*- erlang -*-
%% Config file for netlink-application
{deps, [{hut, ".*", {git, "git://github.com/tolbrino/hut.git", "v1.1.1"}}]}.

{erl_opts, [debug_info, fail_on_warning]}.

{port_env, [
	    {"CFLAGS", "$CFLAGS -DDLOG_DEFAULT=DLOG_INFO"}
	   ]}.

{port_specs, [
	      {"(linux)","priv/netlink_drv.so",["c_src/*.c"]}
	     ]}.
